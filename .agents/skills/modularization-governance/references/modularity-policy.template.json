{
  "extensions": [".ts", ".tsx", ".js", ".jsx"],
  "excludeContains": ["__tests__", ".test.", ".spec.", ".d.ts"],
  "layerOrder": ["ui", "hooks", "model", "api", "infra"],
  "entryFiles": ["index.ts", "index.tsx"],
  "thresholds": {
    "maxFileLines": 400,
    "maxFanOut": 12,
    "maxRelativeImportDepth": 3,
    "maxPublicExports": 25,
    "maxOrphanFiles": 0,
    "maxUnknownLayerFiles": 0,
    "maxReverseLayerImports": 0,
    "maxCircularDeps": 0
  }
}
