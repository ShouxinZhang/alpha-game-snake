{
  "version": 1,
  "commands": {
    "build": ["bash", "scripts/check_errors.sh"],
    "test": ["npm", "test"]
  },
  "madge": {
    "cwd": ".",
    "source": "src",
    "tsconfig": "tsconfig.json",
    "extensions": "ts,tsx,js,jsx"
  },
  "thresholds": {
    "maxCircularDependencies": 0,
    "maxForbiddenDependencies": 0,
    "minLlmConfidence": 0.75
  },
  "layerRules": [],
  "crossSegmentRule": {
    "enabled": false,
    "rootPrefix": "features",
    "allowIndexImportOnly": true,
    "reason": "跨业务域依赖默认仅允许通过目标域入口导入"
  }
}
